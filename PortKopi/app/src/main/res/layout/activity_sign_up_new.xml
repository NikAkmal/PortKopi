<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpNew">

    <include
        layout="@layout/action_bar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/coffee"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PortKopi"
            android:textStyle="bold"
            android:textColor="@color/portkopi"
            android:layout_marginTop="50dp"
            android:textSize="50sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up to start your new Journey"/>

        <EditText
            android:id="@+id/fullname_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Fullname"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/input_field"/>

        <EditText
            android:id="@+id/username_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/input_field"/>

        <EditText
            android:id="@+id/email_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:background="@drawable/input_field"/>

        <EditText
            android:id="@+id/password_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@drawable/input_field"/>

        <Button
            android:id="@+id/btn_signupAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:text="SIGN UP"/>

        <TextView
            android:id="@+id/btn_loginAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account? Log In"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:padding="15dp"/>


    </LinearLayout>

</LinearLayout>